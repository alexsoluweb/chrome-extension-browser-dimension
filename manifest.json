{
    "manifest_version": 3,
    "name": "Screen Size Display",
    "version": "1.0",
    "description": "Display the screen size in real-time as you resize the browser window.",
    "permissions": ["activeTab", "scripting", "windows"],
    "action": {
      "default_icon": {
        "16": "icons/ruler-off-16.png",
        "48": "icons/ruler-off-48.png",
        "128": "icons/ruler-off-128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  